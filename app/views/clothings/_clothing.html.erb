<h2><%= clothing.name %></h2>
<p>Type: <%= clothing.category.name %></p>
<p><%= image_tag clothing.image, width:250 %></p>

<% if !show_detail %>
  <p>Price: <%= clothing.price %></p>
  <p>Quantity: <%= clothing.quantity %></p>
<% end %>

<% if show_detail %>
  <p><%= link_to 'View Details', clothing %></p>
<% end %>